export plugin_name
export plugin_name
export description
export packge_name
export link
export plugin_uri
export version
export author
export author_uri

export settings_list="\
    plugin_name*\
    description\
    packge_name\
    link\
    plugin_uri\
    version\
    author\
    author_uri"

export plugin_name_prompt_text="Please enter a name for your plugin [default]:"
export description_prompt_text="Please enter a short description describing $plugin_name [default]:"
export packge_name_prompt_text="Please enter a preferred package name for $plugin_name [default]:"
export link_prompt_text="Please enter a link here [default]:"
export plugin_uri_prompt_text="Please enter a URI to $plugin_name [default]:"
export version_prompt_text="Please enter a version number for $plugin_name [default]:"
export author_prompt_text="Please enter an author for $plugin_name {default]:"
export author_uri_prompt_text=" Please enter an author URI for $plugin_name [default]:"

echo $settings_list
