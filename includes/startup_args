export link_prompt_text="Please enter a link here [default]:"
export plugin_uri_prompt_text="Please enter a URI to $plugin_name [default]:"
export version_prompt_text="Please enter a version number for $plugin_name [default]:"
export author_prompt_text="Please enter an author for $plugin_name {default]:"
export author_uri_prompt_text=" Please enter an author URI for $plugin_name [default]:"

